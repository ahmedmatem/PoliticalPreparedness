<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonStyle">@style/AppButton</item>
    </style>

    <!-- TODO: Add necessary styles -->

    <style name="AppButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:textSize">@dimen/xlarge_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemCaption">
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextViewLink">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:layout_marginHorizontal">@dimen/layout_margin</item>
    </style>

</resources>
